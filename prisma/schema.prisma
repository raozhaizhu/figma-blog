generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  blogs     Blog[]   // 一个用户可以有多个博客
}

model Blog {
  id            String   @id @default(uuid())  // 唯一标识符
  title         String
  userId        String      // 关联 User 表
  description   String?
  content       String   // 使用 String 存储 Markdown 内容
  imageUrl      String?
  publishedAt   DateTime?
  type          String?
  tags          Json
  status        Status
  views         Int      @default(0)
  likes         Int      @default(0)
  commentsCount Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  deletedAt     DateTime?

  user          User     @relation(fields: [userId], references: [id]) // 外键关联 User
}

enum Status {
  draft
  published
  archived
}

